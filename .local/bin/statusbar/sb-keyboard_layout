#!/bin/sh
# Description:	Show, and toggle keyboard layout.
#

case $BLOCK_BUTTON in
	3) toggle_keyboard_layout ;;
esac

case $UI_ICON in
	emoji)
		EN_ICON='ğŸ‡ºğŸ‡¸'
		AR_ICON='ğŸ‡ªğŸ‡¬'
		KNOWN_ICON='â“'
		;;
	nerd | *)
		LANG_ICON='ï ‹'
		EN_ICON=$LANG_ICON' E'
		AR_ICON=$LANG_ICON' Ø'
		KNOWN_ICON=$LANG_ICON' ï„¨'
		;;
esac

case $(get_keyboard_layout) in
	'us') printf "$EN_ICON\n";;
	'ara') printf "$AR_ICON\n";;
	*) printf "$KNOWN_ICON\n" ;;
esac
