#!/bin/sh
# Description:	Show, and sw
# Set Volume based on mouse command
case $BLOCK_BUTTON in
	3) toggle_keyboard_layout ;;
esac

case $UI_ICON in
	emoji)
		EN_ICON='ğŸ‡ºğŸ‡¸'
		AR_ICON='ğŸ‡ªğŸ‡¬'
		KNOWN_ICON='â“'
		;;
	nerd | *)
		LANG_ICON='ï ‹'
		EN_ICON=$LANG_ICON' E'
		AR_ICON=$LANG_ICON' Ø¶'
		KNOWN_ICON=$LANG_ICON' ''ï„¨'
		;;
esac

layout=$(setxkbmap -print -v 7 | awk '/layout/ {print $2}')
case $layout in
	'us') echo $EN_ICON;;
	'ara') echo $AR_ICON;;
	*) echo $KNOWN_ICON ;;
esac
